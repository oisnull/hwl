<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.hwl.beta.emotion.widget.EmotionFunctionViewPager
        android:id="@+id/efv_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.hwl.beta.emotion.widget.EmotionIndicatorView
        android:id="@+id/eiv_dot_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15" />

    <include layout="@layout/view_split_horizontal" />

    <com.hwl.beta.emotion.widget.EmotionToolBarView
        android:id="@+id/etv_emotion_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/emotion_toolbar_height" />
</LinearLayout>